        <TextView
            android:id="@+id/aztotal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bn"
            android:textSize="30dp"
            android:text="Next"/>

    </LinearLayout>


</LinearLayout>